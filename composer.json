{
    "name": "mittwald/vault-php",
    "type": "library",
    "license": "MIT",
    "homepage": "https://www.mittwald.de/",
    "description": "A PHP client library for 'Vault by HashiCorp'",
    "require": {
        "ext-json": "*",
        "guzzlehttp/psr7": "^1.6",
        "php": "^7.0 || ^8.0",
        "php-http/httplug": "^1.1.0",
        "psr/http-client": "^1.0"
    },
    "suggest": {
        "php-http/curl-client": "CURL Client Adapter",
        "tuupola/http-factory": "HTTP Factory"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0.0",
        "friendsofphp/php-cs-fixer": "^3.41",
        "rector/rector": "^0.18.12",
        "phpstan/phpstan": "^1.10"
    },
    "authors": [
        {
            "name": "Marco Rieger",
            "email": "m.rieger@mittwald.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "VaultPHP\\": "src\\VaultPHP\\"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\VaultPHP\\": "tests\\VaultPHP\\"
        }
    },
    "scripts": {
        "fmt": "php-cs-fixer --allow-risky=yes fix -v",
        "fmtcheck": "php-cs-fixer --allow-risky=yes fix --dry-run",
        "rector": "rector",
        "rectorcheck": "rector --dry-run",
        "lint": "phpstan analyze",
        "test": "phpunit --configuration ./phpunit.xml.dist"
    }
}
